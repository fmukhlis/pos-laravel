{
    "openapi": "3.0.3",
    "info": {
        "title": "Customer API",
        "version": "1.0"
    },
    "servers": [{ "url": "http://localhost:8000/api/v1" }],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer"
            }
        },
        "schemas": {
            "SingleCustomer": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "phone": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "gender": {
                        "type": "string"
                    },
                    "monthlySpending": {
                        "type": "integer"
                    },
                    "annuallySpending": {
                        "type": "integer"
                    },
                    "allTimeSpending": {
                        "type": "integer"
                    }
                }
            },
            "MultipleCustomer": {
                "type": "array",
                "items": {
                    "$ref": "#/components/schemas/SingleCustomer"
                }
            },
            "AddCustomer": {
                "type": "object",
                "required": ["name", "gender"],
                "properties": {
                    "name": { "type": "string" },
                    "phone": { "type": "string" },
                    "email": { "type": "string" },
                    "gender": { "type": "string" }
                }
            },
            "UpdateCustomer": {
                "type": "object",
                "properties": {
                    "name": { "type": "string" },
                    "phone": { "type": "string" },
                    "email": { "type": "string" },
                    "gender": { "type": "string" }
                }
            }
        }
    },
    "security": [{ "bearerAuth": [] }],
    "paths": {
        "/stores/{store_id}/customers": {
            "get": {
                "parameters": [
                    {
                        "name": "store_id",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "integer" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Retrieve all customers of a store",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "customers": {
                                                    "$ref": "#/components/schemas/MultipleCustomer"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "parameters": [
                    {
                        "name": "store_id",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "integer" }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/AddCustomer"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Customer created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "customer": {
                                                    "$ref": "#/components/schemas/SingleCustomer"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/stores/{store_id}/customers/{customer_id}": {
            "get": {
                "parameters": [
                    {
                        "name": "store_id",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "integer" }
                    },
                    {
                        "name": "customer_id",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "integer" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Retrieve a customer",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "customer": {
                                                    "$ref": "#/components/schemas/SingleCustomer"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "parameters": [
                    {
                        "name": "store_id",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "integer" }
                    },
                    {
                        "name": "customer_id",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "integer" }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UpdateCustomer"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Customer updated",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "customer": {
                                                    "$ref": "#/components/schemas/SingleCustomer"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "parameters": [
                    {
                        "name": "store_id",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "integer" }
                    },
                    {
                        "name": "customer_id",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "integer" }
                    }
                ],
                "responses": {
                    "204": {
                        "description": "Customer deleted"
                    }
                }
            }
        }
    }
}
